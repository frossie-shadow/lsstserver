basever=`echo $version | sed -e 's/\+[0-9][0-9]*//'`

fetch external/doxygen/$version/doxygen-${basever}.src.tar.gz
unpack_tar_and_enter doxygen-${basever}.src.tar.gz

echo ./configure --prefix $installdir
./configure --prefix $installdir >> $buildlog 2>&1

echo "Patching src/portable.cpp..." | tee -a $buildlog
cp src/portable.cpp src/portable.cpp.orig >> $buildlog 2>&1
sed -e '/_OS_MAC_.*Q_OS_MACX.*_LIBICONV_VERSION/ s/_LIBICONV_/0 \&\& _LIBICONV_/' src/portable.cpp.orig > src/portable.cpp 2>> $buildlog

make
makeinstall
