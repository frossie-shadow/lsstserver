curl -L \
	http://www.astrometry.net/downloads/astrometry.net-0.24.tar.gz \
> astrometry_net-0.24.tar.gz &&
gunzip < astrometry_net-0.24.tar.gz | tar -xf - &&
rm -rf astrometry_net-0.24 &&
mv astrometry.net-0.24 astrometry_net-0.24 &&
cd astrometry_net-0.24 &&
product_dir=$(eups path 0)/$(eups flavor)/astrometry_net/0.24 &&
make &&
env INSTALL_DIR=$product_dir make install &&
: "astrometry.net doesn't install include files and libraries, so we need to do it ourselves" &&
for d in blind util libkd qfits-an qfits-an/src; do 
	mkdir -p $product_dir/include/$d &&
	cp $d/*.h $product_dir/include
done
